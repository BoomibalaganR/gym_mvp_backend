{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS", // Changed
    "moduleResolution": "node", // Changed
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ]
}